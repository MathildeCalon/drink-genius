	<!--MODAL-->

	<div class="modal-container">
	  <div class="overlay modal-trigger"></div>
	  <div class="modal"role="dialog" aria-labelledby="modalTitle">
	      <button aria-label="close modal" class="close-modal modal-trigger">X</button>
	      <h1 id="modalTitle">Remplis ce formulaire et après remplis ton verre</h1>
	      <form action="/signIn" method="post">
	      	<label class=" label firstName">Nom</label>
	      	<input class=" input " type="text" name="nom" id="nom-input" placeholder="Votre nom">
	      	<label class=" label lastName">Prénom</label>
	      	<input class=" input " type="text" name="prenom" id="prenom-input" placeholder="Votre prénom">
	      	<label class=" label date">Date de naissance</label>
	      	<input class=" input " type="date" name="date_naissance" id="date-input" placeholder="Votre date de naissance">
	      	<label class=" label">Email</label>
	      	<input class=" input" type="email" name="email" id="email-input" placeholder="Votre email">
	      	<label class=" label">Mot de passe</label>
	      	<input class=" input" type="password" name="mot_de_passe" id="password-input" placeholder="Votre mot de passe">
	      </form>
	  </div>
	</div>

