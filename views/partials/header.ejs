  </head>
  <body>

    <div id="overlay-menu-mobile"></div>
    <div id="container">

        <header id="header">
          <div id="header-logo-container">
            <img id="header-logo" src="/images/cocktail.png" alt="logo">
            <h1 id="header-title">Drink Genius</h1>
          </div>

          <nav id="header-nav">
          <div id="header-nav-toggle">
              <i class="fas fa-bars hamburger"></i>
              <i class="fas fa-times close"></i>
            </div>
            <ul id="header-nav-menu">
                <li class="nav-item"><a class="nav-item-link" href="/">Accueil</a></li>
                <li class="nav-item"> <a class="nav-item-link"  href="/cocktails">Liste des cocktails</a></li>
                <% if (locals.user) { %>
                  <li class="nav-item"><a class="nav-item-link" href="/profile">Profil</a></li>
                  <li class="nav-item"><a class="nav-item-link" href="/logout">Deconnexion</a></li>
                <% } else { %>
                  <li class="nav-item modal-trigger-connexion"><div class="nav-item-link">Connexion</div></li>
                <% } %>
              </ul>
          </nav>
        </header>

	<!--MODAL-->

	<div class="modal-container">
	  <div class="overlay modal-trigger"></div>
	  <div class="modal"role="dialog" aria-labelledby="modalTitle">
        <i class="fas fa-times close-modal modal-trigger" aria-label="close modal"></i>
	      <!-- <button aria-label="close modal" class="close-modal modal-trigger">X</button> -->
	      <h3 id="modalTitle">Remplis ce formulaire puis remplis ton verre !</h3>
	      <form id="auth-modal-form" action="/signIn" method="post">
          <ul>
            <li>
              <input class="input" type="text" name="lastname" id="nom-input" placeholder="Votre nom" pattern="^[A-Za-zÀ-ÖØ-öø-ÿ\s'-]+$">
            </li>
            <li>
              <input class="input" type="text" name="firstname" id="prenom-input" placeholder="Votre prénom" pattern="^[A-Za-zÀ-ÖØ-öø-ÿ\s'-]+$">
            </li>
            <li id="date-field">
              <input class="input" type="number" name="birthdate" id="date-input" placeholder="Votre année de naissance" pattern="[0-9]{4}">
              <span></span>
            </li>
            <li>
              <input class="input" type="email" name="email" id="email-input" placeholder="Votre email" required>
            </li>
            <li>
              <input class="input" type="password" name="password" id="password-input" placeholder="Votre mot de passe" pattern="^(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9])(?=.*?[#?!@$ %^&*-]).{8,}$" onkeyup="" required>
            </li>
            <li>
              <input class="input" type="password" name="confirmation" id="confirmation-input" placeholder="Confirmation" pattern="^(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9])(?=.*?[#?!@$ %^&*-]).{8,}$">
            </li>
            <button type="submit" id="auth-modal-btn" class="signup-btn">S'enregistrer</button>
          </ul>
	      </form>
        <a id="already-registered-link" href="">Déjà inscrit ? Connectez-vous</a>
	  </div>
	</div>

