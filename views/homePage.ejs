                                  <div class="liquid-one"></div>
                              </div>
                              <div class="neck">
                                  <div class="liquid-two"></div>
                              </div>
                          </div>
                          <div class="bottle">
                              <div class="bottle-part-one">
                                  <div class="liquid-one"></div>
                              </div>
                              <div class="neck">
                                  <div class="liquid-two"></div>
                              </div>
                          </div>
                          <div class="bottle">
                              <div class="bottle-part-one">
                                   <div class="liquid-one"></div>
                              </div>
                              <div class="neck">
                                  <div class="liquid-two"></div>
                              </div>
                          </div>
                          <div class="bottle">
                              <div class="bottle-part-one">
                                   <div class="liquid-one"></div>
                              </div>
                              <div class="neck">
                                  <div class="liquid-two"></div>
